{% extends 'base.pebble' %}

{% block header %}{{ tag }}{% endblock %}

{% block primary %}
    
    {% for posts as post %}
        {% if (last_month) %}
            {% if post.date | date("MMMM yyyy") != last_month %}
                </ul>
                <h4>{{ post.date | date("MMMM yyyy") }}</h4>
                <ul>
            {% endif %}
        {% else %}
            <h4>{{ post.date | date("MMMM yyyy") }}</h4>
            <ul>
        {% endif %}
        
        <li>{{ post.date | date("dd MMMM") }} - <a href="{{ post.uri} }">{{ post.title }}</a></li>
        {% set last_month = post.date | date("MMMM yyyy") %}

    {% endfor %}
    </ul>

{% endblock %}
